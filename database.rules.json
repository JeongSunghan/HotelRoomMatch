{
    "rules": {
        "rooms": {
            ".read": true,
            ".write": "auth != null"
        },
        "users": {
            ".read": "auth != null",
            ".write": "auth != null",
            "$sessionId": {
                ".indexOn": [
                    "email"
                ]
            }
        },
        "allowedUsers": {
            ".read": "auth != null",
            ".write": "auth != null"
        },
        "roommateInvitations": {
            ".read": "auth != null",
            ".write": "auth != null"
        },
        "join_requests": {
            ".read": "auth != null",
            ".write": "auth != null",
            "$requestId": {
                ".validate": "newData.hasChildren(['fromUserId', 'toRoomNumber'])"
            },
            ".indexOn": [
                "toUserId",
                "fromUserId"
            ]
        },
        "roomChangeRequests": {
            ".read": "auth != null",
            ".write": "auth != null"
        },
        "inquiries": {
            ".read": "auth != null",
            ".write": "auth != null"
        },
        "history": {
            ".read": "auth != null",
            ".write": "auth != null"
        },
        "settings": {
            ".read": true,
            ".write": "auth != null"
        },
        "otp_requests": {
            "$emailKey": {
                ".read": "auth != null",
                ".write": "auth != null",
                ".validate": "newData.hasChildren(['hashedCode', 'expiresAt', 'attempts'])"
            }
        }
    }
}